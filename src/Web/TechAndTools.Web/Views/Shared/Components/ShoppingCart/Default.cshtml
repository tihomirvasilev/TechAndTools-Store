@model List<TechAndTools.Web.ViewModels.ShoppingCart.ShoppingCartProductViewModel>

<div class="cart">
    <div class="cart_container d-flex flex-row align-items-center justify-content-end">
            <div class="cart_icon">
                <img src="~/images/cart.png" alt="">
                <div class="cart_count"><span>@Model.Count</span></div>
            </div>
            <div class="cart_content">
                <div class="cart_text"><a asp-area="" asp-controller="ShoppingCart" asp-action="MyCart">My Cart</a></div>
                <div class="cart_price">$@Model.Sum(x => x.Price * x.Quantity)</div>
            </div>
    </div>
</div>
