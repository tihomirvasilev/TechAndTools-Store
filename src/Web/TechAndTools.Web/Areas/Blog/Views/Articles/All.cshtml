@model IEnumerable<TechAndTools.Web.ViewModels.Articles.AllArticleViewModel>

@{
    ViewData["Title"] = "Blog";
}

@section Styles
{
    <link rel="stylesheet" type="text/css" href="~/css/blog_styles.css">
}

<div class="home">
    <div class="home_background parallax-window" data-parallax="scroll" data-image-src="~/images/shop_background.jpg"></div>
    <div class="home_overlay"></div>
    <div class="home_content d-flex flex-column align-items-center justify-content-center">
        <h2 class="home_title">Technological Blog</h2>
    </div>
</div>
<div class="blog">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="blog_posts d-flex flex-row align-items-start justify-content-between">
                    @foreach (var article in Model)
                    {
                        <!-- Blog post -->
                        <div class="blog_post">
                            <div class="blog_image" style="background-image:url(@article.ImgUrl)"></div>
                            <div class="blog_text">@article.Title</div>
                            <div class="blog_button"><a asp-area="Blog" asp-controller="Articles" asp-action="Details" asp-route-articleId="@article.Id">Continue Reading</a></div>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/blog_custom.js"></script>
}
